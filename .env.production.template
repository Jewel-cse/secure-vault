# AWS S3 Configuration for Vault Storage Backend
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=vault-production-storage

# Vault Configuration
VAULT_ADDR=https://localhost:443
VAULT_SKIP_VERIFY=false

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-secure-password

# TLS Certificate Paths (relative to project root)
VAULT_TLS_CERT_FILE=./vault/certs/vault-cert.pem
VAULT_TLS_KEY_FILE=./vault/certs/vault-key.pem
VAULT_TLS_CA_FILE=./vault/certs/ca-cert.pem

# Vault Initialization (only for first-time setup)
VAULT_UNSEAL_KEY_SHARES=5
VAULT_UNSEAL_KEY_THRESHOLD=3

# Application Integration
VAULT_ROLE_ID=
VAULT_SECRET_ID=

# Backup Configuration
BACKUP_S3_BUCKET=vault-backups
BACKUP_RETENTION_DAYS=30
